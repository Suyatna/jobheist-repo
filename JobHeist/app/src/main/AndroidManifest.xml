<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jobheist.jobheist">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:label="JobHeist"
            android:supportsRtl="true">
        <activity
                android:name=".SignUp"
                android:theme="@style/NoActionBar">
        </activity>
        <activity
                android:name=".SignIn"
                android:theme="@style/NoActionBar">
        </activity>
        <activity
                android:name=".ForgotPassword"
                android:theme="@style/NoActionBar">
        </activity>
        <activity
                android:name=".MainActivity"
                android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".DrawerNotLogIn"
                android:label="@string/title_activity_drawer_not_log_in"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.jobheist.jobheist.MainActivity"/>
        </activity>
        <activity
                android:name=".JobDetail"
                android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>