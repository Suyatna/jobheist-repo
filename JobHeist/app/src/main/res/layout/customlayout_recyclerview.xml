<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">


    <ImageView
            android:layout_width="100dp"
            android:layout_height="72dp"
            android:id="@+id/imageJob"
            android:src="@drawable/img_default"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Title Job"
            android:textColor="@color/Black"
            android:fontFamily="roboto_medium"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textJobName" app:layout_constraintStart_toEndOf="@+id/imageJob"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Company Name"
            android:textColor="@color/Black"
            android:fontFamily="roboto"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCompanyName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textJobName" app:layout_constraintStart_toEndOf="@+id/imageJob"
            android:layout_marginStart="10dp"/>
    <ImageButton
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/bookmark_false"
            android:id="@+id/btn_bookmark" android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
</android.support.constraint.ConstraintLayout>