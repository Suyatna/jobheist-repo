<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".JobDetail">
        <include layout="@layout/app_bar_jobdetail" android:layout_height="wrap_content" android:layout_width="match_parent"/>

    <ImageView
            android:id="@+id/imageJobDetail"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:src="@drawable/img_default"/>
        <TextView
                android:id="@+id/text_job_title_jobdetail"
                android:text="Job Title"
                android:fontFamily="roboto_medium"
                android:textSize="18sp"
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        <TextView
                android:id="@+id/text_salary_jobdetail"
                android:text="Salary : "
                android:fontFamily="roboto"
                android:textSize="12sp"
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="20dp"/>
        <TextView
                android:id="@+id/text_location_jobdetail"
                android:text="location of reception"
                android:fontFamily="roboto"
                android:textSize="12sp"
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"/>
        <TextView
                android:id="@+id/text_description_jobdetail"
                android:text="description..."
                android:fontFamily="roboto"
                android:textSize="12sp"
                android:textColor="@color/Black"
                android:scrollbars="vertical"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"/>
        <Button
                android:id="@+id/btnApplyJob"
                android:text="Apply"
                android:fontFamily="roboto_medium"
                android:textColor="@color/White"
                android:textSize="12sp"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_purple_rounded"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
</LinearLayout>