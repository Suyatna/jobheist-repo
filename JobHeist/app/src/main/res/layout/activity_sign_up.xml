<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUp">

    <ImageButton
            android:background="@null"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/back_arrow"
            android:id="@+id/btn_back"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/sign_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up with Email"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/roboto_medium" android:layout_marginTop="52dp"
            app:layout_constraintHorizontal_bias="0.502"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's join us, and take the job you like"
            android:textColor="@color/Black"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_text"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.503"
            android:id="@+id/sub_title" android:fontFamily="@font/roboto_regular"/>

    <EditText
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:hint="Fullname"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_fullname"
            app:layout_constraintTop_toBottomOf="@+id/sub_title"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_regular"/>

    <EditText
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:hint="Email"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_email"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/input_fullname"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            android:fontFamily="@font/roboto_regular"/>

    <EditText
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/input_password"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/input_email"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            />

    <EditText
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:hint="Re-type Password"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/input_re_password"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/input_password"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            />

    <Button
            android:text="Sign Up"
            android:fontFamily="@font/roboto_medium"
            android:textSize="15sp"
            android:textColor="@color/White"
            android:background="@drawable/btn_purple_rounded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sign_up"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/input_re_password" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <TextView
            android:text="Have Account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_textview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"
            app:layout_constraintEnd_toStartOf="@+id/sign_in_link" android:layout_marginEnd="6dp"
            app:layout_constraintHorizontal_bias="1.0" android:fontFamily="@font/roboto_regular"
            android:textSize="12sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_sign_up" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.166"/>
    <TextView
            android:text="Sign In"
            android:onClick="gotoSignIn"
            android:textColor="@color/colorButton"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/sign_in_link"
            android:layout_marginEnd="124dp" app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/roboto_regular" android:textSize="12sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_sign_up" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.166"/>

</android.support.constraint.ConstraintLayout>