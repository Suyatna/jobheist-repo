<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignIn">
    <include layout="@layout/app_bar_transparent" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView
            android:text="Sign In with Email"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_in_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="roboto_medium"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:text="Let's join us, and take the job you like"
            android:textColor="@color/Black"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.503"
            android:id="@+id/sub_title"
            android:fontFamily="roboto"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_text"
    />
    <EditText
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:hint="Email"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_email"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            android:fontFamily="roboto"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/sub_title"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/input_password"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            android:fontFamily="roboto"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/input_email"/>

    <TextView
            android:onClick="gotoForgotPassword"
            android:text="Forgot Password"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="roboto_medium"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_password_link" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/input_password"/>

    <Button
            android:text="Sign In"
            android:fontFamily="roboto_medium"
            android:textSize="15sp"
            android:textColor="@color/White"
            android:background="@drawable/btn_purple_rounded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sign_in" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/input_password" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.502"/>
    <TextView
            android:text="Don't Have Account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_textview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"
            app:layout_constraintEnd_toStartOf="@+id/sign_up_link" android:layout_marginEnd="6dp"
            app:layout_constraintHorizontal_bias="1.0" android:fontFamily="roboto"
            android:textSize="12sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_sign_in" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.166"/>
    <TextView
            android:onClick="gotoSignUp"
            android:text="Sign up"
            android:textColor="@color/colorButton"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/sign_up_link"
            android:layout_marginEnd="108dp" app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="roboto" android:textSize="12sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_sign_in" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.165"/>

</android.support.constraint.ConstraintLayout>