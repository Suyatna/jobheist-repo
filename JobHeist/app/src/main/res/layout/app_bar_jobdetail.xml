<android.support.v7.widget.Toolbar
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_jobdetail"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay">
    <android.support.constraint.ConstraintLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgCompanyIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_default"
                android:layout_gravity="start"
        />
        <TextView
                android:id="@+id/txtCompanyName"
                android:text="Company Name"
                android:textColor="@color/White"
                android:fontFamily="roboto_medium"
                android:textSize="16sp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgCompanyIcon"
                android:layout_marginStart="10dp"/>
        <TextView
                android:text="Date posted"
                android:textColor="@color/White"
                android:fontFamily="roboto_medium"
                android:textSize="12sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/dateposted"
                app:layout_constraintStart_toStartOf="@id/txtCompanyName"
                app:layout_constraintTop_toBottomOf="@+id/txtCompanyName"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.Toolbar>