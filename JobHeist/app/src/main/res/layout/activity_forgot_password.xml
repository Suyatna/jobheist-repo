<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgotPassword">

    <TextView
            android:text="Forgot Password"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_password_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/roboto_medium" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"
    />

    <EditText
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:hint="Email"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_email"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/forgot_password_text"
    />
    <Button
            android:text="Submit"
            android:fontFamily="@font/roboto_medium"
            android:textSize="15dp"
            android:textColor="@color/White"
            android:background="@drawable/btn_purple_rounded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/input_email" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>