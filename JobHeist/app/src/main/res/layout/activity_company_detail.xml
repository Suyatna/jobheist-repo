<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CompanyDetail">
    <include layout="@layout/app_bar_transparent" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgCompanyImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/img_default"/>
    <TextView
            android:id="@+id/companyName"
            android:text="Company Name"
            android:fontFamily="roboto_medium"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:lines="2"
            app:layout_constraintTop_toBottomOf="@+id/imgCompanyImage"
            android:layout_marginTop="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"/>

    <TextView
            android:id="@+id/companyLocation"
            android:text="Location"
            android:fontFamily="roboto"
            android:textColor="@color/Black"
            android:textSize="12sp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:lines="2"
            app:layout_constraintTop_toBottomOf="@+id/companyName"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/companyName"/>

</android.support.constraint.ConstraintLayout>