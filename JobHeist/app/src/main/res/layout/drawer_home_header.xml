<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true" android:theme="@style/AppTheme.NoActionBar">
    <ImageView
            android:id="@+id/drawer_header_jobheist"
            android:src="@drawable/img_default"
            android:layout_width="wrap_content"
            android:layout_height="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/drawer_header_text_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up now"
            android:fontFamily="roboto_medium"
            android:textSize="20sp"
            android:textColor="@color/Black"
            app:layout_constraintTop_toBottomOf="@id/drawer_header_jobheist"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
    />
    <Button
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/drawer_header_button_sign_up"
            android:text="Sign Up"
            android:textSize="14sp"
            android:textColor="@color/White"
            android:fontFamily="roboto_medium"
            android:background="@drawable/btn_purple_rounded"
            android:layout_width="100dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@id/drawer_header_text_join"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/drawer_header_text_join"
    />
    <TextView
            android:id="@+id/drawer_header_text_have_account"
            android:text="Have Account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/drawer_header_button_sign_up"
            android:layout_marginTop="70dp"
            app:layout_constraintStart_toStartOf="@id/drawer_header_button_sign_up"/>
    <TextView
            android:id="@+id/drawer_header_text_sign_in"
            android:text="Sign In"
            android:textColor="@color/colorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/drawer_header_text_have_account"
            app:layout_constraintStart_toEndOf="@id/drawer_header_text_have_account"
            android:layout_marginStart="5dp"/>
</android.support.constraint.ConstraintLayout>